<Window x:Class="WMP_A05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMP_A05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Login Page" VerticalAlignment="Top" Margin="308,18,308,0" FontSize="36" Height="57" Width="180"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="44" Margin="210,150,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="380" FontSize="20" BorderThickness="3,2" Padding="10,3,0,3"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="207,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.402,-0.406" FontSize="20"/>
        <Button Content="SignIn" HorizontalAlignment="Left" Margin="485,225,0,0" VerticalAlignment="Top" Width="105" Height="39" Click="submit_Click"/>
        <TextBlock x:Name="errorUsername" HorizontalAlignment="Left" Margin="210,206,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="1.081,-1.492" FontSize="14" Foreground="Red"/>

    </Grid>
</Window>
